<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs', {title: 'Beauty Organizer'}) %>
    <link rel="stylesheet" href="/styles/beauty-index.css">
</head>

<body>
    <%- include('./partials/nav.ejs') %>

    <section class="hero">
        <h2>Available Beauty</h2>
        <h3>Easily browse through to see what's available.</h3>
    </section>

    <main>
        <!-- Lists all of the beauty products -->
        <section class="listings">
            <ul>
                <% for (let beauty of beauties) { %>
                <li>
                    <figure>
                        <img src="<%= beauty.photo %>">
                        <figcaption>
                            <h4><%= beauty.name %></h4>
                            <p><%= beauty.brandName %>, Qty: <%= beauty.qty %>, <%= beauty.rating %> stars</p>
                            <a href="/beauties/<%= beauty._id %>">Learn More</a>
                        </figcaption>
                    </figure>
                </li>
                <% } %>
            </ul>
        </section>
    </main>

    <%- include('./partials/footer.ejs') %>
</body>

</html>
