<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs', {title: `Edit ${beauty.name} | Beauty Organizer`}) %>
    <link rel="stylesheet" href="/styles/edit-form.css">
</head>

<body>
    <%- include('../partials/nav.ejs') %>

    <section class="hero">
        <h2>Edit a Listing</h2>
    </section>
    <span class="material-symbols-outlined spa">spa</span>
    <span class="material-symbols-outlined flower">filter_vintage</span>
    <span class="material-symbols-outlined leaf">nest_eco_leaf</span>
    <span class="material-symbols-outlined heart">favorite</span>
    <span class="material-symbols-outlined orange">nutrition</span>
    <span class="material-symbols-outlined moon">dark_mode</span>
    <form method="POST" action="/beauties/<%= beauty._id %>?_method=PUT">
        <!-- Photo input -->
        <label for="photo">Photo (URL):</label>
        <input type="text" id="photo" name="photo" value="<%= beauty.photo %>">
        <br>
        <!-- Brand Name input -->
        <label for="brandName">Brand Name:</label>
        <input type="text" id="brandName" name="brandName" value="<%= beauty.brandName %>" required>
        <br>
        <!-- Name input -->
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="<%= beauty.name %>" required>
        <br>
        <!-- Category input -->
        <label for="category">Category:</label>
        <input type="text" id="category" name="category" value="<%= beauty.category %>" required>
        <br>
        <!-- Qty input -->
        <label for="qty">Qty:</label>
        <input type="number" id="qty" name="qty" min="0" value="<%= beauty.qty %>">
        <br>
        <!-- Size input -->
        <label for="size">Size:</label>
        <input type="text" id="size" name="size" value="<%= beauty.size %>">
        <br>
        <!-- Rating input -->
        <label for="rating">Rating:</label>
        <input type="number" id="rating" name="rating" min="0" value="<%= beauty.rating %>">
        <br>
        <!-- Description input -->
        <label for="description">Description:</label>
        <textarea id="description" name="description"><%= beauty.description %></textarea>
        <br>
        <input type="submit" value="Edit Item">
    </form>

    <%- include('../partials/footer.ejs') %>
</body>

</html>