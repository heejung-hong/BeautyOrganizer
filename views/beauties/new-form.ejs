<!-- Part 2 Build views -->
<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs', {title: 'Add a Listing | Beauty Organizer'}) %>
    <link rel="stylesheet" href="/styles/new-form.css">
</head>

<body>
    <%- include('../partials/nav.ejs') %>
        <span class="material-symbols-outlined spa">spa</span>
        <span class="material-symbols-outlined flower">filter_vintage</span>
        <span class="material-symbols-outlined leaf">nest_eco_leaf</span>
        <span class="material-symbols-outlined heart">favorite</span>
        <span class="material-symbols-outlined orange">nutrition</span>
    <section class="hero">
        <h2>Add an item to your stash!</h2>
    </section>

    <form method="POST" action="/beauties">
        <!-- Photo input -->
        <label for="photo">Photo (URL):</label>
        <input type="text" id="photo" name="photo">
        <br>
        <!-- Brand Name input -->
        <label for="brandName">Brand Name:</label>
        <input type="text" id="brandName" name="brandName" required>
        <br>
        <!-- Name input -->
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required>
        <br>
        <!-- Category input -->
        <label for="category">Category:</label>
        <input type="text" id="category" name="category" required>
        <br>
        <!-- Qty input -->
        <label for="qty">Qty:</label>
        <input type="number" id="qty" name="qty" min="0">
        <br>
        <!-- Size input -->
        <label for="size">Size:</label>
        <input type="text" id="size" name="size">
        <br>
        <!-- Rating input -->
        <label for="rating">Rating:</label>
        <input type="number" id="rating" name="rating" min="0">
        <br>
        <!-- Description input -->
        <label for="description">Description:</label>
        <textarea id="description" name="description"></textarea>
        <br>
        <input type="submit" value="Create Item">
    </form>

    <%- include('../partials/footer.ejs') %>
</body>

</html>